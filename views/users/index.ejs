<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom CSS */
        body {
            background-color: #fafafa;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 250px;
            background-color: #286bad;
            padding-top: 0;
            color: white;
        }

        .sidebar a {
            padding: 10px 15px;
            display: block;
            color: #fff;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .nav-link:hover {
            color: white !important;
        }

        .login:hover {
            background-color: #30f925 !important;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <%- include('../sidebar.ejs', { userEmail: '' }) %>
    <div
        style="position: fixed; top: 1rem; right: 1rem; width: auto; text-align: center; z-index: 1; background-color: yellow; padding: 5px 10px; border-radius: 10px;">
        <%= userEmail %>
    </div>
    <!-- Page Content -->
    <div class="content">
        <h1>Selamat Datang di Halaman Reporter</h1>
        <p></p>
        <div class="container">
            <% if (messages.success) { %>
            <div class="alert alert-info" role="alert">
                <%= messages.success %>
            </div>
            <% } %>
            <% if (messages.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= messages.error %>
            </div>
            <% } %>


            <div class="container">
                <div class="row">
                    <div class="col">
                        <a href="/register" class="btn btn-sm btn-success">Tambah</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">password</th>
                                    <th scope="col" colspan="2">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i = 0; i < data.length; i++) { %>
                                <tr>
                                    <th scope="row"><%= (i+1) %></th>
                                    <td><%= data[i].email %></td>
                                    <td><%= data[i].password %></td>
                                    <td><a href="/users/edit/<%= data[i].id_users %>"
                                            class="btn btn-sm btn-warning">Edit</a>
                                    </td>
                                    <td><a href="/users/delete/<%= data[i].id_users %>"
                                            class="btn btn-sm btn-danger">Delete</a></td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>