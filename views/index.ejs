<head>
  <title><%= title %></title>
  <!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <!-- Owl Carousel CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">

  <style>
    /* Custom styles */
    .item {
      position: relative;
    }

    .item img {
      border-radius: 10px;
      /* Rounded border for images */
    }

    .item .content-overlay {
      background: rgba(169, 169, 169, 0.7);
      /* Background color */
      position: absolute;
      top: 50%;
      /* Center vertically */
      left: 0;
      right: 0;
      transform: translateY(-50%);
      padding: 20px;
      border-radius: 10px;
      /* Rounded corners */
    }

    .item .content-overlay .content-details {
      text-align: center;
      color: #fff;
    }

    .item .content-overlay .content-details h2 {
      font-size: 24px;
      margin-bottom: 10px;
    }

    .item .content-overlay .content-details p {
      font-size: 18px;
      margin-bottom: 20px;
    }

    .item .content-overlay .content-details .btn {
      background-color: #1719ab;
      color: #ffffff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }

    .item .content-overlay .content-details .btn:hover {
      background-color: #3024d2;
      color: rgb(0, 255, 85);
    }

    .btn {
      background-color: #1719ab;
      color: #ffffff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
    }

    .btn:hover {
      background-color: #3024d2;
      color: rgb(0, 255, 85);
    }

    .detail-berita {
      display: none;
    }

    .detail-berita.show {
      display: block;
    }

    .selengkapnya-section {
      background-color: #ccc;
      padding: 20px;
      border-radius: 10px;
      margin-top: 20px;
    }

    #kegiatan {
      margin-top: 150px;
    }
  </style>
</head>

<body class="bg-black  ">
