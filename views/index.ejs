    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>

    <!-- Owl Carousel JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script>
      $(document).ready(function () {
        $(".owl-carousel").owlCarousel({
          items: 1,
          loop: true,
          autoplay: true,
          autoplayTimeout: 3000, // Change the autoplay timeout to 3 seconds
          autoplayHoverPause: true,
          nav: true,
          navText: ["<i class='fa fa-chevron-left'></i>",
            "<i class='fa fa-chevron-right'></i>"
          ], // You can change the navigation icon here
          responsive: {
            0: {
              items: 1
            },
            768: {
              items: 1
            },
            1000: {
              items: 1
            }
          }
        });

        // Tampilkan atau sembunyikan detail berita saat tombol "Selengkapnya" diklik
        $(".selengkapnya-btn").click(function (e) {
          e.preventDefault();
          $(this).closest('.item').find('.detail-berita').toggleClass("show");
        });
      });
    </script>
</body>

</html>